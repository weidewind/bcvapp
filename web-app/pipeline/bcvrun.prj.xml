<?xml version="1.0" encoding="UTF-8"?>
<BCVRunConfiguration>
	<InFileExt>.ab1</InFileExt>
	<InPath>./Input</InPath>
	<BCV_Input>./Input</BCV_Input>
	<BCV_Output>./ServerOutput</BCV_Output>
	<BCV_CFG>${BCV_HOME}/outprofile_dcmp.cfg</BCV_CFG>
	<Vocabulary>/bcviss/BCV/vocabularies/human_microbiome.seq.fas</Vocabulary>
	<UseCase>deconvolution</UseCase>
	<Mode>PIPELINE</Mode>
	<FLAGS>
		<Flag name='ParseSampleNames'>no</Flag>
		<Flag name='RunBCV'>true</Flag>
	</FLAGS>
	<PRIMERS PrimerDelim="_">
		<PrimerDirection name="un16sq">reverse</PrimerDirection>
		<PrimerDirection name="un161">forward</PrimerDirection>
		<PrimerDirection name="un162">reverse</PrimerDirection>
	</PRIMERS>
	<READS>
		<Read>
		</Read>
	</READS>
	<!--
	full or named (or otu)
	-->
	<Database>named</Database>
	<BLASTPath>/usr/bin/</BLASTPath>
	<PhyMLPath>/usr/bin/</PhyMLPath>
	<ClustalWPath>/usr/bin/</ClustalWPath>
	<CDHitPath>/usr/local/bin/</CDHitPath>
	<DBPath>/usr/share/STAP/db/</DBPath>
	<tmpPath>/tmp/</tmpPath>


	<!--
	stap_results configurations
	-->
	<ConfidenceThreshold>0.8</ConfidenceThreshold>
	<DistanceThreshold>0.03</DistanceThreshold>
	<ExpectThreshold>0.05</ExpectThreshold>
	<XSLPath>/bcviss/pipelineFiles/simple_server.xsl</XSLPath>
	<SimpleXSLPath>/bcviss/pipelineFiles/simple_server.xsl</SimpleXSLPath>
	<GeneraFilePath>/bcviss/pipelineFiles/genera.txt</GeneraFilePath>
	<Email></Email>
</BCVRunConfiguration>
